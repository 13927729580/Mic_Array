    %Soud source localization    
    idxDir = DOA(Frames_N,PAR);
    %display(Angle(idxDir));
    Wx = reshape(W(1,:,:),PAR.m,PAR.N+1);
    [Beam_Audio, VAR1] = (BeamFormingSD(Frames_N,1,Wx,PAR,VAR1));
